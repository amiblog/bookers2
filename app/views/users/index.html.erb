<div class="container mt-3">
  <div class="row">

    <div class="col-3">
      <h1>User info</h1>
      <%= render "users/info", user: current_user %>
      <h1 class="mt-3">New book</h1>
      <%= render "books/form", book: @book %>
    </div>

    <div class="col-8 offset-1">
      <h1>Users</h1>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(40,40) %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


