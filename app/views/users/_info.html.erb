<%= image_tag user.get_profile_image(100,100)%>
<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>

<div class="row">
  <% if user==current_user%>
    <%= link_to "編集", edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block"%>
  <% else %>
    <%= link_to "編集", user_path(current_user.id), class: "btn btn-outline-secondary btn-block"%>
  <% end %>
</div>
