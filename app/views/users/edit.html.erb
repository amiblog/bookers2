<h1>User info</h1>
<%= form_with model: @user, local: true do |f| %>
  <div>
    <%= f.label :name %></br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :image %></br>
    <%= f.file_field :profile_image, accept: "image/*" %>
  </div>

  <div>
    <%= f.label :introduction %></br>
    <%= f.text_area :introduction %>
  </div>

  <div>
    <%= f.submit "Update User"%>
  </div>

<% end %>
