<div class="container">
  <%= render "books/error", book: @newbook %>
  <div class="row">
    <div class="col-3">
      <h1>User info</h1>
      <%= render "users/info", user: @book.user %>

      <h1 class="mt-3">New book</h1>
      <%= render "books/form", book: @newbook %>
    </div>

    <div class="col-8 offset-1">
      <h1>Book detail</h1>
      <table class="table">
        <tbody>
          <tr>
            <td><%= image_tag @book.user.get_profile_image(40,40)%></br><%=link_to @book.user.name, user_path(@book.user.id)%></td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <td>
              <% if @book.favorited_by?(current_user)%>
                <%= link_to book_favorites_path(@book.id), method: :delete do%>
                  <i class="fas fa-heart text-danger"></i><span class="text-dark"><%= @book.favorites.count %></span>
                <% end %>
              <% else %>
                <%= link_to book_favorites_path(@book.id), method: :post do %>
                  <i class="far fa-heart text-danger"></i><span class="text"><%= @book.favorites.count %></span>
                <% end %>
              <% end %>
            </td>
            <td>コメント数:<%= @book.book_comments.count %></td>
            <% if @book.user==current_user %>
              <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success btn-sm"%></td>
              <td><%= link_to "Destroy", book_path(@book.id), method: :delete,"data-confirm" =>"本当に消しますか？", class: "btn btn-danger btn-sm" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>

        <% @book.book_comments.each do |book_comment|%>
        <div class="d-flex flex-row border-bottom border-dark mb-2">
          <div>
            <%= image_tag book_comment.user.get_profile_image(50,50)%></br>
            <%=link_to book_comment.user.name, user_path(book_comment.user.id) %>
          </div>
          <div class="ml-2 my-auto"><%= book_comment.comment %></div>
          <div class="ml-2 my-auto">
            <% if book_comment.user==current_user %>
              <%= link_to "Destroy",book_book_comment_path(book_comment.book.id, book_comment.id), method: :delete, class: "btn btn-danger btn-sm"%>
            <%end%>
          </div>
        </div>
        <% end %>

      <div>
        <%= form_with model: [@book, @book_comment], local: true do |f|%>
          <div class="form-group">
            <%= f.text_area :comment, rows:"5", class: "form-control"%>
          </div>
            <%= f.submit "送信"%>
        <% end %>
      </div>
    </div>
  </div>
</div>

