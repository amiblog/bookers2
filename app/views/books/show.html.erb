<div class="container">
  <%= render "books/error", book: @newbook %>
  <div class="row">
    <div class="col-3">
      <h1>User info</h1>
      <%= render "users/info", user: @book.user %>

      <h1 class="mt-3">New book</h1>
      <%= render "books/form", book: @newbook %>
    </div>

    <div class="col-8 offset-1">
      <h1>Book detail</h1>
      <div class="book_detail">
        <%= render "books/detail", book: @book%>
      </div>
      <div class="comments">
        <%= render "books/comments", book: @book%>
      </div>

      <div>
        <%= form_with model: [@book, @book_comment], local: false do |f|%>
          <div class="form-group">
            <%= f.text_area :comment, rows:"5", class: "form-control"%>
          </div>
            <%= f.submit "送信"%>
        <% end %>
      </div>
    </div>
  </div>
</div>

